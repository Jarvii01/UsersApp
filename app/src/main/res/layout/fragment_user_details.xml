<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    tools:context=".screens.userDetailsScreen.UserDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:text="Leanne Graham"
            android:textSize="24.dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:text="Bret"
            android:textSize="24.dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:text="Sincere@april.biz"
            android:textSize="16.dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:text="Gwenborough Kulas Light Apt. 556 "
            android:textSize="16.dp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:text="Telephone: 1-770-736-8031 x56442"
            android:textSize="16.dp" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:text="hildegard.org"
            android:textSize="16.dp" />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.dp"
            android:paddingBottom="16dp"
            android:text="Company: Romaguera-Crona (Multi-layered client-server neural-net)"
            android:textSize="16.dp" />

    </LinearLayout>


</LinearLayout>

